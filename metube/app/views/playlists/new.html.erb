<%= form_for [@playlist] do |f| %>
  <%= f.label :title, 'Title' %>:
  <%= f.text_field :title %><br>  
  <%= f.label :description, 'Description' %>:
  <%= f.text_field :description %>

<%= f.select :video_ids, Video.all.collect {|x| [x.title, x.id]}, {}, :multiple => true %><br>
  
  <%= f.submit %>
<% end %>